<div class="modal-content">
  <div class="modal-header">
    <h5 class="modal-title"><%= @obj.id ? "Edit Project" : 'Add Project' %></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
  	<form id="project_form" method="POST" onsubmit="return ModalService.submitForm('project')">
    	<div class="container-fluid">
    		<div class="row">
    			<div class="col-md-4 col-6">
                    <input type="hidden" name="id" value="<%= @obj.id || '' %>">
    				<input type="hidden" name="experience_id" value="<%= params[:experience_id] %>">
    				<div class="form-group">
    					<label class="required">Project Name</label>
    					<input type="text" name="project_name" class="form-control" required="true" value="<%= @obj.project_name || '' %>">
    				</div>
    			</div>

    			<div class="col-md-4 col-6">
    				<div class="form-group">
    					<label class="required">Skills</label>
    					<input type="text" name="skills" class="form-control" required="true" value="<%= @obj.skills || '' %>">
    				</div>
    			</div>

    			<div class="col-md-4 col-6">
    				<div class="form-group">
    					<label class="required">App link</label>
    					<input type="text" name="app_link" class="form-control" required="true" value="<%= @obj.app_link || '' %>">
    				</div>
    			</div>
    			<div class="col-md-4 col-6">
    				<div class="form-group">
    					<label class="required">Start Date</label>
    					<input type="text" name="start_date" class="form-control" required="true" value="<%= @obj.start_date || '' %>">
    				</div>
    			</div>

    			<div class="col-md-4 col-6">
    				<div class="form-group">
    					<label class="">End Date</label>
    					<input type="text" name="end_date" class="form-control" required="true" value="<%= @obj.end_date || '' %>">
    				</div>

    			</div>

    			<div class="col-md-12 col-12">
    				<label>Description</label>
    				<textarea name="description" class="form-control"><%= @obj.description || '' %></textarea>
    			</div>
    		</div>
    	</div>
    	<div class="text-right py-5">
    		<button type="submit" onclick="" class="btn btn-primary">Save changes</button>
    		<% if @obj.id %>
    		<button type="button" onclick="ModalService.deleteEntity('project', <%= @obj.id %>)" class="btn btn-block">Delete</button>
    		<% end %>
    	</div>
    </form>
  </div>
</div>
