<div class="modal-content">
  <div class="modal-header">
    <h5 class="modal-title"><%= @obj.id ? "Edit Certification" : 'Add Certification' %></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
  	<form id="certification_form" method="POST" onsubmit="return ModalService.submitForm('certification')">
    	<div class="container-fluid">
    		<div class="row">
    			<div class="col-md-4 col-6">
    				<input type="hidden" name="id" id="award_id" value="<%= @obj.id || '' %>"> 
    				<div class="form-group">
    					<label class="required">Certification Name</label>
    					<input type="text" name="name" class="form-control" required="true" value="<%= @obj.name || '' %>">
    				</div>
    			</div>

    			<div class="col-md-4 col-6">
    				<div class="form-group">
    					<label class="required">Start Date</label>
    					<input type="text" name="start_date" class="form-control" required="true" value="<%= @obj.start_date || '' %>">
    				</div>
    			</div>

    			<div class="col-md-4 col-6">
    				<div class="form-group">
    					<label class="required">End Date</label>
    					<input type="text" name="end_date" class="form-control" required="true" value="<%= @obj.end_date || '' %>">
    				</div>

    			</div>
    			<div class="col-md-4 col-6">
    				<div class="form-group">
    					<label class="required">Institute Name</label>
    					<input type="text" name="institute_name" class="form-control" required="true" value="<%= @obj.institute_name || '' %>">
    				</div>

    			</div>
    			<div class="col-md-4 col-6">
    				<div class="form-group">
    					<label class="required">Location</label>
    					<input type="text" name="location" class="form-control" required="true" value="<%= @obj.location || '' %>">
    				</div>

    			</div>

    			<div class="col-md-12 col-12">
    				<label>Description</label>
    				<textarea name="description" class="form-control"><%= @obj.description || '' %></textarea>
    			</div>
    		</div>
    	</div>
    	<div class="text-right py-5">
    		<button type="submit" onclick="" class="btn btn-primary">Save changes</button>
    		<% if @obj.id %>
    		<button type="button" onclick="ModalService.deleteEntity('certification', <%= @obj.id %>)" class="btn btn-block">Delete</button>
    		<% end %>
    	</div>
    </form>
  </div>
</div>
