
<div class="resume_header d-flex align-middle px-0 border-none">
	<h5 class="mb-0 px-0">Projects</h5>
	<% if current_user == @user %>
		<span class="ml-auto" onclick="ModalService.toggleModal('project', '', <%= experience.id %>	)">+ Add more project</span>
	<% end %>
</div>
<div class="container">
	<div class="row">
		<% projects.each do |project| %>
			<div class="col-12">
				<div class="project_container">
					<div class="project_bullet">
					</div>
					<div class="d-flex">
						<p class="color-primary experience_header mb-0" ><%= project.project_name %></p>
						<span class="ml-auto d-flex">
							<% if current_user == @user %>
								<img data-id="<%= project.id %>" onclick="ModalService.toggleModal('project', <%= project.id %>, <%= project.experience_id %>)" src="<%= asset_path 'edit-icon.svg' %>" class="img-fluid ml-auto" >
							<% end %>
						</span>
					</div>
					<div class="d-flex py-3">
						<p class="mb-0 align-self-center"><%= project.skills %></p>
					</div>
					<div>
						<p class="grey"><%= project.description %></p>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>


<div class="modal" id="project_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    
  </div>
</div>


